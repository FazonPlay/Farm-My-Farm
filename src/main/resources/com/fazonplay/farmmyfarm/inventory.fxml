<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fazonplay.farmmyfarm.Controllers.InventoryController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Inventory and Market" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Your Balance: "/>
        <Label fx:id="balanceLabel" text="500.00"/>
    </HBox>

    <TabPane>
        <Tab text="Seeds" closable="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Your Seeds:" style="-fx-font-weight: bold;"/>
                <GridPane fx:id="seedsGrid" hgap="10" vgap="5">
                    <Label text="Seed" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label text="Quantity" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </Tab>

        <Tab text="Crops" closable="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Your Harvested Crops:" style="-fx-font-weight: bold;"/>
                <GridPane fx:id="cropsGrid" hgap="10" vgap="5">
                    <Label text="Crop" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label text="Quantity" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Sell Price" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label text="Actions" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                </GridPane>
            </VBox>
        </Tab>

        <Tab text="Animal Products" closable="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Your Animal Products:" style="-fx-font-weight: bold;"/>
                <GridPane fx:id="animalProductsGrid" hgap="10" vgap="5">
                    <Label text="Product" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label text="Quantity" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Sell Price" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label text="Actions" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                </GridPane>
            </VBox>
        </Tab>
    </TabPane>

    <Button text="Close" onAction="#onClose"/>
</VBox>